<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
 "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   	<!-- properties -->
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="connection.driver_class">org.h2.Driver</property>
		<property name="connection.url">jdbc:h2:&lt;database_name&gt;</property>
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>
		<property name="hibernate.connection.provider_class">org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider</property>
		<property name="hibernate.c3p0.acquire_increment">1</property>
		<property name="hibernate.c3p0.idle_test_period">0</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">15</property>
		<property name="hibernate.c3p0.timeout">0</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/Customer.hbm.xml" />
		<mapping resource="ormmapping/Order.hbm.xml" />
		<mapping resource="ormmapping/OrderPositions.hbm.xml" />
		<mapping resource="ormmapping/Payment.hbm.xml" />
		<mapping resource="ormmapping/Product.hbm.xml" />
		<mapping resource="ormmapping/Shipping.hbm.xml" />
		<mapping resource="ormmapping/Warehouse.hbm.xml" />
	</session-factory>
</hibernate-configuration>
