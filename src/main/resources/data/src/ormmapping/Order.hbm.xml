<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Order" table="`Order`" lazy="false">
		<id name="orderId" column="orderId" type="integer" unsaved-value="0">
			<generator class="native">
			</generator>
		</id>
		<property name="date" column="`date`" type="date" not-null="false" lazy="false"/>
		<property name="state" column="state" type="string" length="255" not-null="false" lazy="false"/>
		<many-to-one name="customer" cascade="lock" column="customerId" class="Customer" not-null="true" lazy="proxy" access="field">
		</many-to-one>
		<set name="ORM_OrderPositions" lazy="true" cascade="save-update,lock" inverse="true">
			<key column="orderId" not-null="true"/>
			<one-to-many class="OrderPositions"/>
		</set>
	</class>
</hibernate-mapping>
